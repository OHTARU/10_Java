import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.util.List;

public class TodoListFile {

    private static final String fileName = "todolist.txt";

    public void saveFile(List<Todo> list) {
        try (ObjectOutputStream oos = new ObjectOutputStream(new FileOutputStream(fileName))) {
            oos.writeObject(list); // List 객체 자체를 저장
            System.out.println("파일 저장 완료");
        } catch (Exception e) {
            System.out.println(e);
        }
    }

    public List<Todo> readFile() { // List<Todo>를 반환하도록 수정
        List<Todo> list = null; // 초기화 추가
        try (ObjectInputStream ois = new ObjectInputStream(new FileInputStream(fileName))) {
            list = (List<Todo>) ois.readObject(); // List 객체로 읽어옴
            System.out.println("파일 불러오기 완료");
        } catch (Exception e) {
            System.out.println(e.getMessage());
        }
        return list; // List<Todo> 반환
    }
}
